<!--Heading: Populate the title-->
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

<!--Message placeholder-->
  <%- messages() %>

<!--Error display-->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<h2>Welcome <%- locals.account_firstname %></h2>
<p class="lonely-links"><a href="/account/update/<%- locals.account_id %>">Update Account Information</a></p>
<% if (locals.account_type !== "Client") { %>
  <h3>Inventory Management</h3>
  <p class="lonely-links"><a href="/inv/">Inventory Management</a></p>
<% } %>