<!--Heading: Populate the title-->
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

<!--Message placeholder-->
  <% messages() %>

<!--Error display-->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

  <!--Login form-->
  <div class="login-container">
    <form id="login-form" action="/account/login" method="POST">
      <label for="email">Email:</label>
      <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>">>
      <label for="password">Password:</label>
      <input type="password" id="password" name="account_password" required pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+\-=[\]{};':\\|,.<>/?]).{12,}$">
      <input type="submit" value="Login">
    </form>
    <div class="registration-link">
      No account? <a href="/account/registration">Sign-up</a>
    </div>
  </div>
  <p class="password-description">The password must be 12 characters long and contain at least one capital letter, one number, and one special character.</p>