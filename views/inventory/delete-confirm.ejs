<!--Heading: Populate the title-->
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

<!--Message placeholder-->
  <%- messages() %>

  <!--Error display-->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!--inventory entry form-->

<form id="delete-form" action="/inv/delete" method="POST">
  <p>Confirm Deletion - The delete is permanent.</p>
  
  <label for="inv_make">Make:</label>
  <input type="text" id="inv_make" name="inv_make" required readonly value="<%= locals.inv_make %>">

  <label for="inv_model">Model:</label>
  <input type="text" id="inv_model" name="inv_model" required readonly value="<%= locals.inv_model %>">

  <label for="inv_year">Year:</label>
  <input type="number" id="inv_year" name="inv_year" required readonly value="<%= locals.inv_year %>">

  <label for="inv_price">Price:</label>
  <input type="number" id="inv_price" name="inv_price" required readonly value="<%= locals.inv_price %>">

  <button type="submit">Delete Vehicle</button>

  <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
</form>