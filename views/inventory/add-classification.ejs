<!--Heading: Populate the title-->
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

<!--Message placeholder-->
  <%- messages() %>

  <!--Error display-->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

  <!--Display entry form -->
  <form id="add-classification-form" action="/inv/newClassification" method="POST">
    <label for="class-name">Classification Name:</label>
    <input type="text" id="class-name" name="classification_name" required pattern ="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>">
    <p class="validation-description">Classification cannot contain spaces or special characters</p>
    <input type="submit" value="Add Classification">
  </form>